{
  "name": "api-consultorio",
  "version": "1.0.0",
  "description": "Trabalhinho da disciplina Tópicos Especiais em Algorítmos.",
  "private": true,
  "license": "MIT",
  "authors": [
    "Fernanda C. Silva",
    "Julio L. Muller",
    "Lucas M. Malfertheiner"
  ],
  "scripts": {
    "postinstall": "node -e \"require('fs').existsSync('.env') || require('fs').copyFileSync('.env.example', '.env')\"",
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "lint": "eslint src/ --fix",
    "seed": "sequelize db:seed:all",
    "migrate": "sequelize db:migrate",
    "migrate:seed": "npm run migrate && npm run seed",
    "migrate:reset": "sequelize db:migrate:undo:all && npm run migrate",
    "migrate:reset:seed": "npm run migrate:reset && npm run seed"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2"
  },
  "devDependencies": {
    "eslint": "^7.27.0",
    "eslint-config-lacussoft": "^2.0.1",
    "nodemon": "^2.0.7",
    "sequelize-cli": "^6.2.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "lacussoft",
    "env": {
      "commonjs": true,
      "node": true
    },
    "ignorePatterns": [
      "!.sequelizerc"
    ],
    "rules": {
      "camelcase": "off",
      "no-console": "off",
      "no-magic-numbers": "off",
      "no-underscore-dangle": "off"
    }
  }
}
